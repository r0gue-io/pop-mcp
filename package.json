{
  "name": "@pop-cli/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Polkadot ink! smart contract development with Pop CLI integration",
  "type": "module",
  "bin": {
    "pop-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "inspector": "node --inspect node_modules/@modelcontextprotocol/inspector/dist/index.js build/index.js"
  },
  "keywords": [
    "mcp",
    "polkadot",
    "ink",
    "substrate",
    "smart-contracts",
    "web3",
    "pop-cli"
  ],
  "author": "R0GUE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/r0gue-io/pop-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/r0gue-io/pop-mcp/issues"
  },
  "homepage": "https://github.com/r0gue-io/pop-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.1.3",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
